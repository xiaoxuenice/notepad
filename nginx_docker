mkdir /root/.ssh/
cat > /root/.ssh/authorized_keys << EOF
ssh-rsa  root@a
ssh-rsa  root@hg
ssh-rsa  root@gzyd
ssh-rsa  root@Beijing
ssh-rsa  root@xg
EOF
sed -i 's/SELINUX=enforcing/SELINUX=disabled/g' /etc/selinux/config
setenforce 0
yum update -y
yum -y install epel-release
yum -y install yum-utils wget bash-completion vim lrzsz net-tools rsync unzip iftop htop tar  gcc automake autoconf libtool make
yum -y install php-fpm gcc gcc-c++ make libtool zlib zlib-devel pcre pcre-devel openssl openssl-devel
centos=`cat /etc/redhat-release |awk -F '.' '{print $1}'|awk '{print $NF}'`
if [[ $centos -eq 8 ]];then 
yum-config-manager --add-repo  http://mirrors.aliyun.com/repo/Centos-8.repo
elif [[ $centos -eq 7 ]];then
yum-config-manager --add-repo  http://mirrors.aliyun.com/repo/Centos-7.repo
fi
yum clean all 
yum makecache

curl -s https://get.docker.com |sh
systemctl enable docker
systemctl restart  docker

docker run -dit --name nginx  -v /software/peizhiwenjian/:/etc/nginx/conf.d/ -v /software/zhengshu/:/software/zhengshu/ -v /software/html/:/software/html/ --restart always --network host  nginx



server {
        listen        80;
        listen        7685 ssl;
        listen        443  ssl;
        server_name   taobao.com www.taobao.com;
        charset       utf-8;
        ssl_certificate_key /software/zhengshu/taobao.com.key;
        ssl_certificate /software/zhengshu/taobao.com.crt;
        ssl_protocols             TLSv1 TLSv1.1 TLSv1.2;
        ssl_prefer_server_ciphers on;
        if ($server_port ~ "(80|443)" ){
        rewrite ^/(.*) https://$host:7685$request_uri break;
        }
        location / {
        root          /software/html/taobao.com;
        index         index.html index.htm index.php;
        }
}

cd /software/peizhiwenjian
for i in `cat a.txt`;do cp taobao.com.conf ${i}.conf ;sed -i "s/taobao.com/${i}/g" ${i}.conf;done
